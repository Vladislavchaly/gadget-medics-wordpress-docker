https://app-cleaver.loc {
    root /app/public
    fastcgi / app:9000 php {
        connect_timeout 300s
        read_timeout 300s
        send_timeout 300s
        index index.php
    }
    rewrite {
        to {path} {path}/ /index.php?{query}
    }
    timeouts 5m
    gzip
    browse
    #log /var/log/caddy/access.log
    #errors /var/log/caddy/error.log

    tls self_signed
}

https://apply-clever.loc {
    proxy / app_cleaver_front_webserver:81

    timeouts 5m
    gzip
    browse

    tls self_signed
}

https://socket.apply-clever.loc {
    proxy / app_cleaver_socket_node:8888 {
      websocket
      transparent
    }

    timeouts 5m
    gzip
    browse

    tls self_signed
}
